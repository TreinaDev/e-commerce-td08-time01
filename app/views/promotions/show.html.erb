<h2 class='text-center'>Detalhes da promoção</h2>
<h3 class='text-center'>Promoção: <%=@promotion.name%></h3>

<div class="container px-4">
  <div class="row gx-5">
    <div class="col">
      <div class="p-3 border bg-light">
        
        <ul class="list-group">
          <li class="list-group-item d-flex justify-content-between align-items-start">
            <div class="ms-2 me-auto">
              <div class="fw-bold"><%=Promotion.human_attribute_name(:start_date)%>:</div>
              <%=l @promotion.start_date%>
            </div>
          </li>
          <li class="list-group-item d-flex justify-content-between align-items-start">
            <div class="ms-2 me-auto">
              <div class="fw-bold"><%=Promotion.human_attribute_name(:end_date)%>:</div>
              <%=l @promotion.end_date%>
            </div>
          </li>
        </ul>

      </div>
    </div>
    <div class="col">
      <div class="p-3 border bg-light">

        <ul class="list-group">
          <li class="list-group-item d-flex justify-content-between align-items-start">
            <div class="ms-2 me-auto">
              <div class="fw-bold"><%=Promotion.human_attribute_name(:discount_percent)%>:</div>
              <%=@promotion.discount_percent%>%
            </div>
          </li>
          <li class="list-group-item d-flex justify-content-between align-items-start">
            <div class="ms-2 me-auto">
              <div class="fw-bold"><%=Promotion.human_attribute_name(:maximum_discount)%>:</div>
              <%= image_tag 'rubi', height: '16' %>
              <%=number_with_delimiter(@promotion.maximum_discount)%>
            </div>
          </li>
          <li class="list-group-item d-flex justify-content-between align-items-start">
            <div class="ms-2 me-auto">
              <div class="fw-bold"><%=Promotion.human_attribute_name(:absolute_discount_uses)%>:</div>
              <%=@promotion.absolute_discount_uses%>
            </div>
          </li>
          <li class="list-group-item d-flex justify-content-between align-items-start">
            <div class="ms-2 me-auto">
              <div class="fw-bold"><%=Promotion.human_attribute_name(:code)%>:</div>
              <%=@promotion.code%>
            </div>
          </li>
        </ul>
      
      </div>
    </div>

    <div class="col">
      <div class="p-3 border bg-light">

        <div class="ms-2 me-auto">
          <div class="fw-bold">Categorias atreladas:<div>
        </div>

        <ul class="list-group" id="categories">
          <% @categories.each do |cat|%>
            <li class="list-group-item d-flex justify-content-between align-items-start">
              <div class="ms-2 me-auto">
                <%=cat.name%>
              </div>
            </li>
          <% end %>
        </ul>
      
      </div>
    </div>

  </div>

  <div class="text-center buffer">
    <%= link_to 'Voltar', :back, class: 'btn btn-outline-primary mini-button' %>
  </div>
</div>