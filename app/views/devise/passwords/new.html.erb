<h2 class="h3 mb-3 fw-normal" style="text-align:center; margin-top: 50px;">
  Esqueceu sua senha?
</h2>

<main class="form-signin w-100 m-auto" style="max-width: 270px;">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="actions">
      <%= f.submit "Envie-me instruções para redefinir minha senha." %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</main>