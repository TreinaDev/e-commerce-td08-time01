<h1 class="text-center little-buffer">Produtos</h1>
<% if @products.empty? %>
    <p><%= @message_if_empty %></p>
<% else %>
  <section class="container">
    <div class="row">
      <% @products.each do |product| %>
        <div class="col card-group little-buffer">
          <article class="card" style="width: 18rem; max-width: 18rem;">
            <svg class="bd-placeholder-img card-img-top" width="100%" height="180" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: Image cap" preserveAspectRatio="xMidYMid slice" focusable="false"><title>Placeholder</title><rect width="100%" height="100%" fill="#868e96"></rect><text x="50%" y="50%" fill="#dee2e6" dy=".3em">Image cap</text></svg>

            <div class="card-body">
              <h5 class="card-title text-center"><%= link_to product.name, product %></h5>
              <p class="card-text"><strong>Marca: </strong><%= product.brand %></p>
              <p class="card-text"><%= product.description %></p>
              <p><%= product.product_category.nil? ? 'Sem categoria' : 'Categoria: ' + product.product_category.name %></p>
              <p><%= number_to_currency(product.current_price, precision: 2) %></p>
              <div class="text-center">
                <%= link_to 'Ver produto', product, class: 'btn btn-outline-primary' %>
              </div>
            </div>
          </article>
        </div>
      <% end %>
    </div>
  </section>
<% end %>
    
