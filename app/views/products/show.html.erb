<article>
  <h3><%= @product.name %></h3>
  <dl>
    <dt>SKU:</dt>
    <dd><%= @product.sku %></dd>
    <dt>Marca:</dt>
    <dd><%= @product.brand %></dd>
    <dt>Descrição: </dt>
    <dd><%= @product.description %></dd>
  <dl>
</article>

<div>
  <%user_signed_in? ? (user_id = current_user.id) : (user_id = 0)%>  
  <%= button_to 'Adicionar ao carrinho', user_cart_index_path(user_id), params: {'product_id' => @product.id} %>
</div>