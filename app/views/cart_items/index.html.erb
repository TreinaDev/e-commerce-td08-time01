<h3 class='text-center'>Meu Carrinho</h3>

<table class="table text-center align-middle m-auto" style="max-width: 900px">
  <thead>
    <tr>
      <th>Produto</th>
      <th>Quantidade</th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |p|%>
      <tr>
        <td class="text-start"><%= p.product.name%></td>
        <td class="text-center"> <strong> <%=p.quantity%> </strong></td>
        <td><%= button_to 'Retirar', cart_item_path(p.id), class: 'btn btn-outline-warning mini-button', method: :delete %> </td>
      </tr>
    <%end%>
  </tbody>
</table>